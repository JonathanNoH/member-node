<%- include('head') -%>
<body>
  <%- include('header') -%>
  <main>
    <div class="container">
      <% if(locals.currentUser && locals.currentUser.membership === 'admin') { %>
        <h2>Delete <%= message.author.fullName %>'s post?</h2>
        <div class="message-container">
          <h3> <%= message.title %> </h3>
          <p> <%= message.content %> </p>
          <p> <%= message.formattedDate %> </p>
        </div>
        <form action="" method="post">
          <section>
            <label for="delete">Are you sure you want to delete this post?</label>
            <input type="checkbox" name="delete" id="delete">
          </section>
          <button type="submit">Delete</button>
        </form>
      <% } else { %>
        <p>You do not have permission to view this page.</p>
      <% } %>
    </div>
  </main>
</body>
<%- include('foot') -%>